# AI Interview Assistant - Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="AI Interview Assistant"
NEXT_PUBLIC_APP_VERSION="1.0.0"
NEXT_PUBLIC_DEBUG_MODE=true

# =============================================================================
# GOOGLE CLOUD SERVICES
# =============================================================================
# Google Cloud Text-to-Speech API
GOOGLE_TTS_API_KEY=path/to/your/service-account-key.json
GOOGLE_TTS_PROJECT_ID=your-project-id
GOOGLE_TTS_VOICE_NAME=en-IN-Standard-A
GOOGLE_TTS_LANGUAGE_CODE=en-IN

# Google AI Studio (Gemini)
GOOGLE_AI_API_KEY=your_gemini_api_key_here
GOOGLE_AI_MODEL=gemini-pro
GOOGLE_AI_MAX_TOKENS=1000
GOOGLE_AI_TEMPERATURE=0.7

# Google Cloud Video Intelligence API
GOOGLE_VIDEO_INTELLIGENCE_API_KEY=path/to/your/service-account-key.json
GOOGLE_VIDEO_INTELLIGENCE_PROJECT_ID=your-project-id
GOOGLE_VIDEO_INTELLIGENCE_LOCATION=us-central1

# =============================================================================
# SPEECH-TO-TEXT CONFIGURATION
# =============================================================================
STT_BACKEND=webspeech
STT_LANGUAGE=en-US
STT_CONTINUOUS=true
STT_INTERIM_RESULTS=true

# =============================================================================
# AUDIO PROCESSING
# =============================================================================
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_SILENCE_THRESHOLD=0.01
AUDIO_VAD_SENSITIVITY=0.5

# =============================================================================
# 3D AVATAR CONFIGURATION
# =============================================================================
NEXT_PUBLIC_AVATAR_SCALE=3.2
NEXT_PUBLIC_AVATAR_POSITION_Y=-5.3
NEXT_PUBLIC_CAMERA_FOV=28
NEXT_PUBLIC_CAMERA_POSITION_Z=3.2

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================
NEXT_PUBLIC_MAX_FPS=60
NEXT_PUBLIC_LOD_DISTANCE=100
NEXT_PUBLIC_SHADOW_QUALITY=medium
NEXT_PUBLIC_ANTIALIASING=true

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your-super-secret-session-key-here

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# DATABASE (if needed)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_interview
# REDIS_URL=redis://localhost:6379

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# OPENAI_API_KEY=your_openai_api_key_here
# AZURE_SPEECH_KEY=your_azure_speech_key_here
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# =============================================================================
# DEPLOYMENT
# =============================================================================
# VERCEL_URL=https://your-app.vercel.app
# NEXT_PUBLIC_API_URL=https://your-api-domain.com
# NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_FEEDBACK=true
NEXT_PUBLIC_ENABLE_EXPORT=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development
# NEXT_PUBLIC_MOCK_API=true
# NEXT_PUBLIC_SKIP_AUTH=true
# NEXT_PUBLIC_DISABLE_3D=true
